<script>
const container = bm.container;
const context = bm.context;

const fileManager = {
  files: {},
  
  addFiles(fieldIndex, newFiles) {
    if (!this.files[fieldIndex]) {
      this.files[fieldIndex] = [];
    }
    this.files[fieldIndex].push(...newFiles);
  },
  
  removeFile(fieldIndex, fileName) {
    if (this.files[fieldIndex]) {
      this.files[fieldIndex] = this.files[fieldIndex].filter(f => f.name !== fileName);
    }
  },
  
  getFiles(fieldIndex) {
    return this.files[fieldIndex] || [];
  },
  
  clearAll() {
    this.files = {};
  }
};

class Dropdown {
  constructor(element) {
    this.wrapper = element;
    this.trigger = element.querySelector('.dropdown-trigger');
    this.menu = element.querySelector('.dropdown-menu');
    this.options = element.querySelectorAll('.dropdown-option');
    this.hiddenInput = element.querySelector('input[type="hidden"]');
    this.fieldIndex = element.dataset.fieldIndex;
    this.type = element.dataset.dropdown;
    this.selectedValues = [];
    
    this.init();
  }
  
  init() {
    this.trigger.addEventListener('click', () => this.toggle());
    
    if (this.type === 'single') {
      this.options.forEach(option => {
        option.addEventListener('click', (e) => this.selectSingle(e));
      });
    } else {
      this.options.forEach(option => {
        option.addEventListener('click', (e) => this.selectMulti(e));
      });
    }
    
    document.addEventListener('click', (e) => {
      if (!this.wrapper.contains(e.target)) {
        this.close();
      }
    });
  }
  
  toggle() {
    if (this.wrapper.classList.contains('open')) {
      this.close();
    } else {
      this.open();
    }
  }
  
  open() {
    this.wrapper.classList.add('open');
  }
  
  close() {
    this.wrapper.classList.remove('open');
  }
  
  selectSingle(e) {
    e.stopPropagation();
    const option = e.currentTarget;
    const value = option.dataset.value;
    
    this.options.forEach(opt => opt.classList.remove('selected'));
    option.classList.add('selected');
    
    this.trigger.textContent = value;
    this.trigger.classList.remove('placeholder');
    this.hiddenInput.value = value;
    this.selectedValues = [value];
    
    this.close();
  }
  
  selectMulti(e) {
    e.stopPropagation();
    const option = e.currentTarget;
    const value = option.dataset.value;
    
    if (option.classList.contains('selected')) {
      option.classList.remove('selected');
      this.selectedValues = this.selectedValues.filter(v => v !== value);
    } else {
      option.classList.add('selected');
      this.selectedValues.push(value);
    }
    
    if (this.selectedValues.length > 0) {
      this.trigger.textContent = this.selectedValues.join(', ');
      this.trigger.classList.remove('placeholder');
      this.hiddenInput.value = this.selectedValues.join(', ');
    } else {
      const field = context.property.fields[this.fieldIndex];
      this.trigger.textContent = field.placeholder || 'ì„ íƒí•˜ì„¸ìš”';
      this.trigger.classList.add('placeholder');
      this.hiddenInput.value = '';
    }
  }
}

function formatFileSize(bytes) {
  if (bytes === 0) return '0 Bytes';
  const k = 1024;
  const sizes = ['Bytes', 'KB', 'MB'];
  const i = Math.floor(Math.log(bytes) / Math.log(k));
  return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
}

function fileToBase64(file) {
  return new Promise((resolve, reject) => {
    const reader = new FileReader();
    reader.onload = () => resolve(reader.result);
    reader.onerror = reject;
    reader.readAsDataURL(file);
  });
}

function initFileUploads() {
  const fileWrappers = container.querySelectorAll('.file-upload-wrapper');
  
  fileWrappers.forEach(wrapper => {
    const fieldIndex = parseInt(wrapper.dataset.fieldIndex);
    const field = context.property.fields[fieldIndex];
    if (!field) return;
    
    const input = wrapper.querySelector('.file-upload-input');
    const area = wrapper.querySelector('.file-upload-area');
    const fileList = wrapper.querySelector('.file-list');
    const hiddenInput = wrapper.querySelector('input[type="hidden"]');
    
    const maxSizeMB = parseFloat(wrapper.dataset.maxSize) || field.maxFileSize || 10;
    const maxSize = maxSizeMB * 1024 * 1024;
    
    input.addEventListener('change', async (e) => {
      await handleFiles(e.target.files, fieldIndex, field, maxSize, maxSizeMB, fileList, hiddenInput);
    });
    
    area.addEventListener('dragover', (e) => {
      e.preventDefault();
      area.classList.add('dragover');
    });
    
    area.addEventListener('dragleave', () => {
      area.classList.remove('dragover');
    });
    
    area.addEventListener('drop', async (e) => {
      e.preventDefault();
      area.classList.remove('dragover');
      await handleFiles(e.dataTransfer.files, fieldIndex, field, maxSize, maxSizeMB, fileList, hiddenInput);
    });
  });
}

async function handleFiles(files, fieldIndex, field, maxSize, maxSizeMB, fileListElement, hiddenInput) {
  const acceptedFormats = field.acceptedFormats ? field.acceptedFormats.split(',').map(f => f.trim().toLowerCase()) : [];
  const validFiles = [];
  
  for (const file of files) {
    const fileExtension = '.' + file.name.split('.').pop().toLowerCase();
    
    if (acceptedFormats.length > 0 && !acceptedFormats.includes(fileExtension)) {
      alert(`${file.name}: í—ˆìš©ë˜ì§€ ì•Šì€ íŒŒì¼ í˜•ì‹ì…ë‹ˆë‹¤. (í—ˆìš©: ${field.acceptedFormats})`);
      continue;
    }
    
    if (file.size > maxSize) {
      alert(`${file.name}: íŒŒì¼ í¬ê¸°ê°€ ${maxSizeMB}MBë¥¼ ì´ˆê³¼í•©ë‹ˆë‹¤.`);
      continue;
    }
    
    if (!field.allowMultiple && fileManager.getFiles(fieldIndex).length > 0) {
      alert('í•˜ë‚˜ì˜ íŒŒì¼ë§Œ ì²¨ë¶€ ê°€ëŠ¥í•©ë‹ˆë‹¤.');
      break;
    }
    
    validFiles.push(file);
  }
  
  if (validFiles.length > 0) {
    if (!field.allowMultiple) {
      fileManager.files[fieldIndex] = [];
    }
    fileManager.addFiles(fieldIndex, validFiles);
    updateFileList(fieldIndex, fileListElement, hiddenInput);
  }
}

function updateFileList(fieldIndex, fileListElement, hiddenInput) {
  const files = fileManager.getFiles(fieldIndex);
  fileListElement.innerHTML = '';
  
  if (files.length > 0) {
    hiddenInput.value = 'files_attached';
    
    files.forEach(file => {
      const fileItem = document.createElement('div');
      fileItem.className = 'file-item';
      fileItem.innerHTML = `
        <div class="file-item-info">
          <span class="file-item-name">${file.name}</span>
          <span class="file-item-size">${formatFileSize(file.size)}</span>
        </div>
        <button type="button" class="file-item-remove" data-file-name="${file.name}">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"/>
          </svg>
        </button>
      `;
      
      const removeBtn = fileItem.querySelector('.file-item-remove');
      removeBtn.addEventListener('click', () => {
        fileManager.removeFile(fieldIndex, file.name);
        updateFileList(fieldIndex, fileListElement, hiddenInput);
      });
      
      fileListElement.appendChild(fileItem);
    });
  } else {
    hiddenInput.value = '';
  }
}

function initForm() {
  const form = container.querySelector('[data-form-container]');
  const submitBtn = container.querySelector('#btn-submit');
  const privacyCheckbox = container.querySelector('#privacy');
  const checkboxCustom = container.querySelector('[data-privacy-checkbox]');
  
  initFileUploads();
  
  const dropdowns = [];
  container.querySelectorAll('.dropdown-wrapper').forEach(el => {
    dropdowns.push(new Dropdown(el));
  });
  
  // ê°œì¸ì •ë³´ ë™ì˜ ì²´í¬ë°•ìŠ¤ ì²˜ë¦¬
  if (checkboxCustom && privacyCheckbox) {
    checkboxCustom.addEventListener('click', () => {
      privacyCheckbox.checked = !privacyCheckbox.checked;
      checkboxCustom.classList.toggle('checked', privacyCheckbox.checked);
    });
  }
  
  // ì•½ê´€ ë”ë³´ê¸° í† ê¸€ ì²˜ë¦¬
  const toggleTermsLink = container.querySelector('[data-toggle-terms]');
  const termsBox = container.querySelector('[data-terms-box]');
  
  if (toggleTermsLink && termsBox) {
    toggleTermsLink.addEventListener('click', (e) => {
      e.preventDefault();
      termsBox.classList.toggle('show');
      toggleTermsLink.textContent = termsBox.classList.contains('show') ? 'ì ‘ê¸°' : 'ë”ë³´ê¸°';
    });
  }
  
  const textareas = container.querySelectorAll('.field-textarea');
  textareas.forEach(textarea => {
    const counter = textarea.parentElement.querySelector('.char-count');
    if (counter) {
      textarea.addEventListener('input', () => {
        counter.textContent = textarea.value.length;
      });
    }
  });
  
  if (context.property.useSubmitRange && context.property.submitStart && context.property.submitEnd) {
    const start = new Date(context.property.submitStart);
    const end = new Date(context.property.submitEnd);
    const today = new Date();
    const submitRangeDiv = container.querySelector('#submit-range');
    
    if (today < start || today > end) {
      if (submitRangeDiv) {
        submitRangeDiv.innerHTML = `
          <div class="alert alert-warning">
            ì œì¶œê¸°í•œì´ ì•„ë‹™ë‹ˆë‹¤. ${start.toLocaleDateString()} ~ ${end.toLocaleDateString()}ê¹Œì§€ë§Œ ì œì¶œì´ ê°€ëŠ¥í•©ë‹ˆë‹¤.
          </div>
        `;
      }
      submitBtn.disabled = true;
    }
  }
  
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    if (!context.property.board || !context.property.board.id) {
      alert('ê²Œì‹œíŒì„ ì„¤ì •í•´ì£¼ì„¸ìš”');
      return;
    }
    
    const formData = new FormData(form);
    const fieldData = [];
    let userName = 'ê³ ê°';
    let userEmail = 'customer@sixshop.com';
    
    let isValid = true;
    
    for (let i = 0; i < context.property.fields.length; i++) {
      const field = context.property.fields[i];
      const fieldName = `field_${i}`;
      
      if (field.type === 'file') {
        const files = fileManager.getFiles(i);
        
        if (field.isRequired && files.length === 0) {
          alert(`${field.name}ì„(ë¥¼) ì²¨ë¶€í•´ì£¼ì„¸ìš”`);
          isValid = false;
          break;
        }
        
        if (files.length > 0) {
          const fileInfos = [];
          for (const file of files) {
            const base64 = await fileToBase64(file);
            fileInfos.push({
              name: file.name,
              size: formatFileSize(file.size),
              data: base64
            });
          }
          
          fieldData.push({
            name: field.name,
            value: `ì²¨ë¶€íŒŒì¼ ${files.length}ê°œ`,
            files: fileInfos
          });
        }
      } else {
        const value = formData.get(fieldName) || '';
        
        if (!context.customer) {
          if (field.type === 'text' && (field.name.includes('ì´ë¦„') || field.name.toLowerCase().includes('name'))) {
            if (value) userName = value;
          }
          if (field.type === 'email' && value) {
            userEmail = value;
          }
        }
        
        if (field.isRequired && !value) {
          alert(`${field.name}ì„(ë¥¼) ì…ë ¥í•´ì£¼ì„¸ìš”`);
          isValid = false;
          break;
        }
        
        if (field.type === 'email' && value) {
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!emailRegex.test(value)) {
            alert(`ì˜¬ë°”ë¥¸ ì´ë©”ì¼ í˜•ì‹ì„ ì…ë ¥í•´ì£¼ì„¸ìš”`);
            isValid = false;
            break;
          }
        }
        
        if (field.type === 'phone' && value) {
          const phoneRegex = /^[0-9-+() ]+$/;
          if (!phoneRegex.test(value)) {
            alert(`ì˜¬ë°”ë¥¸ ì „í™”ë²ˆí˜¸ í˜•ì‹ì„ ì…ë ¥í•´ì£¼ì„¸ìš”`);
            isValid = false;
            break;
          }
        }
        
        fieldData.push({
          name: field.name,
          value: value
        });
      }
    }
    
    if (!isValid) return;
    
    if (context.property.board.id && context.property.showPrivacyConsent && privacyCheckbox && !privacyCheckbox.checked) {
      alert('ê°œì¸ì •ë³´ ìˆ˜ì§‘ ë° ì´ìš©ì— ë™ì˜í•´ì£¼ì„¸ìš”');
      return;
    }
    
    try {
      submitBtn.disabled = true;
      submitBtn.textContent = 'ì œì¶œ ì¤‘...';
      
      const title = context.customer 
        ? `${context.customer.name.full}ë‹˜ì˜ ì‘ë‹µ`
        : `${userName}ë‹˜ì˜ ì‘ë‹µ`;
      
      const contentsContainer = document.createElement('ul');
      contentsContainer.style.listStyle = 'none';
      contentsContainer.style.padding = '0';
      
      fieldData.forEach(field => {
        const listItem = document.createElement('li');
        listItem.style.marginBottom = '10px';
        
        if (field.files) {
          let fileHtml = `<strong>${field.name}:</strong><br>`;
          field.files.forEach(file => {
            fileHtml += `<div style="margin-left: 20px; margin-top: 5px;">
              <a href="${file.data}" download="${file.name}" style="color: #1A4AE7;">
                ğŸ“ ${file.name} (${file.size})
              </a>
            </div>`;
          });
          listItem.innerHTML = fileHtml;
        } else {
          const formattedValue = field.value.toString().replace(/\n/g, '<br>');
          listItem.innerHTML = `<strong>${field.name}:</strong> ${formattedValue}`;
        }
        
        contentsContainer.appendChild(listItem);
      });
      
      const contents = contentsContainer.outerHTML;
      
      const params = {
        boardId: context.property.board.id,
        title,
        contents,
        accessType: 'OPEN'
      };
      
      if (!context.customer) {
        params.userName = userName;
        params.email = userEmail;
        params.password = 'sixshopisawesome';
      }
      
      const result = await bm.do('board:createPost', { params });
      
      if (result) {
        form.reset();
        fileManager.clearAll();
        
        container.querySelectorAll('.file-list').forEach(el => {
          el.innerHTML = '';
        });
        
        if (checkboxCustom) {
          checkboxCustom.classList.remove('checked');
        }
        if (privacyCheckbox) {
          privacyCheckbox.checked = false;
        }
        
        if (termsBox) {
          termsBox.classList.remove('show');
        }
        if (toggleTermsLink) {
          toggleTermsLink.textContent = 'ë”ë³´ê¸°';
        }
        
        container.querySelectorAll('.dropdown-trigger').forEach((trigger) => {
          const wrapper = trigger.closest('.dropdown-wrapper');
          const fieldIndex = wrapper.dataset.fieldIndex;
          const field = context.property.fields[fieldIndex];
          if (field) {
            trigger.textContent = field.placeholder || 'ì„ íƒí•˜ì„¸ìš”';
            trigger.classList.add('placeholder');
          }
        });
        
        container.querySelectorAll('.dropdown-option').forEach(opt => {
          opt.classList.remove('selected');
        });
        
        container.querySelectorAll('input[type="hidden"]').forEach(input => {
          input.value = '';
        });
        
        const counters = container.querySelectorAll('.char-count');
        counters.forEach(counter => {
          counter.textContent = '0';
        });
        
        const completeAlert = container.querySelector('#submit-complete');
        if (completeAlert) {
          completeAlert.classList.add('show');
          setTimeout(() => {
            completeAlert.classList.remove('show');
          }, 5000);
        }
        
        alert('ì œì¶œì´ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤.');
      } else {
        alert('ì œì¶œì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤. ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.');
      }
    } catch (error) {
      console.error('Form submission error:', error);
      alert('ì œì¶œ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.');
    } finally {
      submitBtn.disabled = false;
      submitBtn.innerHTML = context.property.submitButtonText;
    }
  });
}

initForm();

bm.onContextChange = () => {
  fileManager.clearAll();
  initForm();
};

bm.onDestroy = () => {
  fileManager.clearAll();
  const form = container.querySelector('[data-form-container]');
  if (form) {
    form.replaceWith(form.cloneNode(true));
  }
};
</script>

