            <input type="tel" name="field_{{@index}}" class="bm-form__input" placeholder="{{placeholder}}" {{#if isRequired}}data-required="true"{{/if}}>
            {{/if}}
            
            {{#if (eq type 'number')}}
            <input type="number" name="field_{{@index}}" class="bm-form__input" placeholder="{{placeholder}}" {{#if isRequired}}data-required="true"{{/if}}>
            {{/if}}
            
            {{#if (eq type 'date')}}
            <input type="date" name="field_{{@index}}" class="bm-form__input" {{#if isRequired}}data-required="true"{{/if}}>
            {{/if}}
            
            {{#if (eq type 'textarea')}}
            <div class="bm-form__textarea-wrapper">
              <textarea name="field_{{@index}}" class="bm-form__textarea" placeholder="{{placeholder}}" maxlength="5000" {{#if isRequired}}data-required="true"{{/if}}></textarea>
              <div class="bm-form__counter">
                <span class="char-count">0</span>/5,000
              </div>
