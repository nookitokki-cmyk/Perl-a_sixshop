<script>
var container = bm.container;
var context = bm.context;

function handleKeyboard(event) {
  var target = event.target;
  if ((event.key === 'Enter' || event.key === ' ') && target.matches('.bm-btn-group__btn')) {
    event.preventDefault();
    if (target.tagName === 'A') {
      target.click();
    }
  }
}

container.addEventListener('keydown', handleKeyboard, true);

bm.onContextChange = function() {};

bm.onDestroy = function() {
  container.removeEventListener('keydown', handleKeyboard, true);
};
</script>

