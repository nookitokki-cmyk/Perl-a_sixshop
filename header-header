<script>
var container = bm.container;
var context = bm.context;
var heightObserver = null;
var resizeTimer = null;

/* ===== ë°°ê²½ìƒ‰ + ê¸€ë˜ìŠ¤ëª¨í”¼ì¦˜ ì¦‰ì‹œ ì ìš© ===== */
function applyBackgroundColors() {
  var headerBlock = container.querySelector('.bm-header');
  var drawer = container.querySelector('.bm-header__drawer');

  /* --- í—¤ë” ë°°ê²½ --- */
  if (headerBlock && context.property) {
    headerBlock.style.backgroundColor = context.property.headerBgColor || '#FFFFFF';

    var blurLayer = container.querySelector('.bm-header__blur');
    if (context.property.enableGlassmorphism && blurLayer) {
      var intensity = context.property.blurIntensity || 10;
      blurLayer.style.display = 'block';
      blurLayer.style.backdropFilter = 'blur(' + intensity + 'px)';
      blurLayer.style.webkitBackdropFilter = 'blur(' + intensity + 'px)';
    } else if (blurLayer) {
      blurLayer.style.display = 'none';
      blurLayer.style.backdropFilter = '';
      blurLayer.style.webkitBackdropFilter = '';
    }
  }

  /* --- í¼ì¹¨ë©”ë‰´ ë°°ê²½ --- */
  if (drawer && context.property) {
    drawer.style.backgroundColor = context.property.drawerBgColor || '#3B2E2A';

    var drawerBlur = drawer.querySelector('.bm-header__drawer-blur');
    if (context.property.enableDrawerGlassmorphism && drawerBlur) {
      var drawerIntensity = context.property.drawerBlurIntensity || 10;
      drawerBlur.style.display = 'block';
      drawerBlur.style.backdropFilter = 'blur(' + drawerIntensity + 'px)';
      drawerBlur.style.webkitBackdropFilter = 'blur(' + drawerIntensity + 'px)';
    } else if (drawerBlur) {
      drawerBlur.style.display = 'none';
      drawerBlur.style.backdropFilter = '';
      drawerBlur.style.webkitBackdropFilter = '';
    }
  }
}

/* ===== ê²¹ì¹˜ê¸° ëª¨ë“œ ìƒ‰ìƒ í† ê¸€ ===== */
function applyOverlayColors() {
  var headerBlock = container.querySelector('.bm-header');
  if (!headerBlock || !context.property) return;

  var overlayMode = context.property.headerOverlayMode;
  var isFixed = context.property.isHeaderFixed;
  var isHome = context.page && context.page.name === 'HOME';

  if (isFixed && overlayMode === 'transparent' && isHome) {
    headerBlock.classList.add('is-overlay');
    /* ê²¹ì¹˜ê¸° ì‹œ ë°°ê²½ íˆ¬ëª… ì²˜ë¦¬ */
    headerBlock.style.backgroundColor = 'transparent';
  } else {
    headerBlock.classList.remove('is-overlay');
    headerBlock.style.backgroundColor = context.property.headerBgColor || '#FFFFFF';
  }
}

/* ===== Sticky í—¤ë” ===== */
function enableStickyHeader() {
  var header = container.querySelector('.bm-header');
  var section = container.closest('section');

  if (!header || !section) return;

  section.style.position = 'sticky';
  section.style.zIndex = '500';
  section.style.width = '100%';
  section.style.top = 'var(--ad-banner-height, 0)';
  section.style.backgroundColor = 'transparent';
}

function disableStickyHeader() {
  var section = container.closest('section');

  if (section) {
    section.style.position = '';
    section.style.zIndex = '';
    section.style.width = '';
    section.style.top = '';
    section.style.backgroundColor = '';
    section.style.marginBottom = '';
  }

  if (heightObserver) {
    heightObserver.disconnect();
    heightObserver = null;
  }
}

/* ===== íˆ¬ëª… ê²¹ì¹˜ê¸° (ì˜¤ë²„ë ˆì´) ===== */
function applyOverlayMode() {
  var section = container.closest('section');
  var header = container.querySelector('.bm-header');
  var overlayMode = context.property ? context.property.headerOverlayMode : 'normal';
  var isHome = context.page && context.page.name === 'HOME';

  if (!section || !header) return;

  if (overlayMode === 'transparent' && isHome) {
    section.style.marginBottom = (-header.offsetHeight) + 'px';

    if (heightObserver) {
      heightObserver.disconnect();
      heightObserver = null;
    }

    heightObserver = new ResizeObserver(function(entries) {
      if (entries[0] && section) {
        section.style.marginBottom = (-entries[0].contentRect.height) + 'px';
      }
    });
    heightObserver.observe(header);
  } else {
    section.style.marginBottom = '';

    if (heightObserver) {
      heightObserver.disconnect();
      heightObserver = null;
    }
  }
}

/* ===== í—¤ë” ê³ ì • + ê²¹ì¹˜ê¸° í†µí•© ===== */
function initHeaderFixed() {
  var isFixed = context.property && context.property.isHeaderFixed;

  if (!isFixed) {
    disableStickyHeader();
    return;
  }

  var adBanner = document.querySelector('#adBanner');
  if (adBanner) {
    document.documentElement.style.setProperty('--ad-banner-height', adBanner.offsetHeight + 'px');
  } else {
    document.documentElement.style.setProperty('--ad-banner-height', '0px');
  }

  enableStickyHeader();
  applyOverlayMode();
}

/* ===== ë©”ë‰´ í™œì„± ìƒíƒœ ===== */
function markActiveMenus() {
  var currentPath = context.page ? context.page.path : '';
  if (!currentPath) return;

  /* ë°ìŠ¤í¬í†± */
  var menuLinks = container.querySelectorAll('.bm-header__menu-link');
  var submenuLinks = container.querySelectorAll('.bm-header__submenu-link');

  menuLinks.forEach(function(link) {
    var href = link.getAttribute('href');
    if (href && href !== '#' && href === currentPath) {
      link.classList.add('is-active');
    }
  });

  submenuLinks.forEach(function(link) {
    var href = link.getAttribute('href');
    if (href && href !== '#' && href === currentPath) {
      link.classList.add('is-active');
      var parentItem = link.closest('.bm-header__menu-item');
      if (parentItem) {
        var parentLink = parentItem.querySelector('.bm-header__menu-link');
        if (parentLink) parentLink.classList.add('is-active');
      }
    }
  });

  /* í¼ì¹¨ë©”ë‰´ */
  var drawerLinks = container.querySelectorAll('.bm-header__drawer-link');
  var drawerSublinks = container.querySelectorAll('.bm-header__drawer-sublink');

  drawerLinks.forEach(function(link) {
    var href = link.getAttribute('href');
    if (href && href !== '#' && href === currentPath) {
      link.classList.add('is-active');
    }
  });

  drawerSublinks.forEach(function(link) {
    var href = link.getAttribute('href');
    if (href && href !== '#' && href === currentPath) {
      link.classList.add('is-active');
    }
  });
}

/* ===== í¼ì¹¨ë©”ë‰´ (Drawer) ===== */
function initDrawer() {
  var hamburger = container.querySelector('.bm-header__hamburger');
  var overlay = container.querySelector('.bm-header__overlay');
  var drawer = container.querySelector('.bm-header__drawer');

  if (!hamburger || !overlay || !drawer) return;

  function openDrawer() {
    hamburger.classList.add('is-active');
    overlay.classList.add('is-active');
    drawer.classList.add('is-active');
    document.body.style.overflow = 'hidden';
  }

  function closeDrawer() {
    hamburger.classList.remove('is-active');
    overlay.classList.remove('is-active');
    drawer.classList.remove('is-active');
    document.body.style.overflow = '';
  }

  hamburger.addEventListener('click', function(e) {
    e.preventDefault();
    if (drawer.classList.contains('is-active')) {
      closeDrawer();
    } else {
      openDrawer();
    }
  });

  overlay.addEventListener('click', function() {
    closeDrawer();
  });

  /* ë©”ë‰´ ë§í¬ í´ë¦­ ì‹œ ë‹«ê¸° */
  drawer.addEventListener('click', function(e) {
    var link = e.target.closest('a');
    if (link && !link.hasAttribute('target') && link.getAttribute('href') !== '#') {
      closeDrawer();
    }
  });

  /* href="#" ë§í¬ ê¸°ë³¸ ë™ì‘ ë°©ì§€ */
  container.addEventListener('click', function(e) {
    var link = e.target.closest('a[href="#"]');
    if (link) {
      e.preventDefault();
    }
  }, true);
}

/* ===== ì´ˆê¸°í™” ===== */
function init() {
  applyBackgroundColors();
  applyOverlayColors();
  initHeaderFixed();
  initDrawer();
  markActiveMenus();
}

init();

/* ===== ë¦¬ì‚¬ì´ì¦ˆ í•¸ë“¤ëŸ¬ ===== */
function handleResize() {
  clearTimeout(resizeTimer);
  resizeTimer = setTimeout(function() {
    initHeaderFixed();
  }, 250);
}

window.addEventListener('resize', handleResize);

/* ===== ì»¨í…ìŠ¤íŠ¸ ë³€ê²½ ===== */
bm.onContextChange = function() {
  init();
};

/* ===== ì •ë¦¬ ===== */
bm.onDestroy = function() {
  document.body.style.overflow = '';
  disableStickyHeader();
  document.documentElement.style.removeProperty('--ad-banner-height');
  window.removeEventListener('resize', handleResize);
  clearTimeout(resizeTimer);
};
</script>

