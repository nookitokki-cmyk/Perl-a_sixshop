<template>
<div class="bm-gallery">
  {{#if (gt (size property.images) 0)}}
    <div class="bm-gallery__grid">
      {{#each property.images}}
        <div class="bm-gallery__item {{#if image}}has-image{{else}}has-placeholder{{/if}}" data-index="{{@index}}">
          {{#if image}}
            <img src="{{image}}" alt="{{#if alt}}{{alt}}{{else}}ê°¤ëŸ¬ë¦¬ ì´ë¯¸ì§€ {{add @index 1}}{{/if}}" loading="lazy" />
          {{else}}
            <div class="bm-gallery__placeholder">
              <div class="bm-gallery__placeholder-icon">ğŸ–¼ï¸</div>
              <div class="bm-gallery__placeholder-text">ì´ë¯¸ì§€ë¥¼ ì¶”ê°€í•˜ì„¸ìš”</div>
            </div>
          {{/if}}
        </div>
      {{/each}}
    </div>

    {{#if (eq property.displayMode "loadMore")}}
    <div class="bm-gallery__load-more">
      <button class="bm-gallery__btn">{{property.buttonText}}</button>
    </div>
    {{/if}}
  {{else}}
    <div class="bm-gallery__empty">
      ğŸ“· ì´ë¯¸ì§€ë¥¼ ì¶”ê°€í•˜ì„¸ìš”
    </div>
  {{/if}}
</div>

<div class="bm-gallery__modal">
  <div class="bm-gallery__modal-backdrop"></div>
  <div class="bm-gallery__modal-content">
    <button class="bm-gallery__modal-close">&times;</button>
    <img class="bm-gallery__modal-img" src="" alt="" />
  </div>
</div>
</template>

<script>
var container = bm.container;
var context = bm.context;

var currentDisplayCount = 0;
var totalImages = 0;
var imageObserver = null;
var savedScrollY = 0;

/* ===== í˜¸ë²„ íˆ¬ëª…ë„ JS ì ìš© ===== */
function applyHoverOpacity() {
  var items = container.querySelectorAll('.bm-gallery__item.has-image');
  var opacity = context.property.hoverOpacity / 100;

  items.forEach(function(item) {
    item.addEventListener('mouseenter', function() {
      if (!context.property.enableHoverEffect) return;
      var img = item.querySelector('img');
      if (img) img.style.opacity = opacity;
    });
    item.addEventListener('mouseleave', function() {
      var img = item.querySelector('img');
      if (img) img.style.opacity = '1';
    });
  });
}

/* ===== Intersection Observer ===== */
function setupLazyLoading() {
  if (imageObserver) {
    imageObserver.disconnect();
  }

  if (!('IntersectionObserver' in window)) return;

  imageObserver = new IntersectionObserver(function(entries) {
    entries.forEach(function(entry) {
      if (entry.isIntersecting) {
        var img = entry.target;
        var src = img.getAttribute('data-src');
        if (src && !img.src) {
          img.src = src;
          img.removeAttribute('data-src');
        }
        imageObserver.unobserve(img);
      }
    });
  }, {
    rootMargin: '50px',
    threshold: 0.01
  });

  var lazyImages = container.querySelectorAll('img[data-src]');
  lazyImages.forEach(function(img) {
    imageObserver.observe(img);
  });
}

/* ===== ì´ë¯¸ì§€ ì§€ì—° ë¡œë”© ì¤€ë¹„ ===== */
function prepareImages() {
  var items = container.querySelectorAll('.bm-gallery__item.has-image');
  items.forEach(function(item, index) {
    var img = item.querySelector('img');
    if (!img || !img.src) return;
    if (context.property.displayMode === 'loadMore' && index >= context.property.initialDisplayCount) {
      var currentSrc = img.src;
      img.setAttribute('data-src', currentSrc);
      img.removeAttribute('src');
      img.style.opacity = '0';
    }
  });
}

/* ===== ê°¤ëŸ¬ë¦¬ ì´ˆê¸°í™” ===== */
function initGallery() {
  var loadMoreContainer = container.querySelector('.bm-gallery__load-more');
  var items = container.querySelectorAll('.bm-gallery__item');

  totalImages = items.length;

  if (context.property.displayMode === 'loadMore') {
    currentDisplayCount = Math.min(context.property.initialDisplayCount, totalImages);

    items.forEach(function(item, index) {
      if (index < currentDisplayCount) {
        item.classList.remove('is-hidden');
        var img = item.querySelector('img');
        if (img) img.style.opacity = '1';
      } else {
        item.classList.add('is-hidden');
      }
    });

    updateLoadMoreButton();
  } else {
    currentDisplayCount = totalImages;
    items.forEach(function(item) {
      item.classList.remove('is-hidden');
      var img = item.querySelector('img');
      if (img) img.style.opacity = '1';
    });
    if (loadMoreContainer) {
      loadMoreContainer.classList.add('is-hidden');
    }
  }

  setupLazyLoading();
  applyHoverOpacity();
}

/* ===== ë”ë³´ê¸° ë²„íŠ¼ ìƒíƒœ ===== */
function updateLoadMoreButton() {
  var loadMoreContainer = container.querySelector('.bm-gallery__load-more');
  if (!loadMoreContainer) return;

  if (currentDisplayCount >= totalImages) {
    loadMoreContainer.classList.add('is-hidden');
  } else {
    loadMoreContainer.classList.remove('is-hidden');
  }
}

/* ===== ë”ë³´ê¸° ë¡œë“œ ===== */
function loadMoreImages() {
  var items = container.querySelectorAll('.bm-gallery__item');
  var loadCount = context.property.loadMoreCount || 6;
  var nextDisplayCount = Math.min(currentDisplayCount + loadCount, totalImages);

  var itemsToLoad = [];
  for (var i = currentDisplayCount; i < nextDisplayCount; i++) {
    if (items[i]) itemsToLoad.push(items[i]);
  }

  function loadNextItem(index) {
    if (index >= itemsToLoad.length) {
      currentDisplayCount = nextDisplayCount;
      updateLoadMoreButton();
      return;
    }

    requestAnimationFrame(function() {
      var item = itemsToLoad[index];
      item.classList.remove('is-hidden');

      var img = item.querySelector('img');
      if (img) {
        img.style.opacity = '1';
        img.style.animation = 'bmGalleryFadeIn 0.5s ease';

        var dataSrc = img.getAttribute('data-src');
        if (dataSrc && imageObserver) {
          imageObserver.observe(img);
        }
      }

      setTimeout(function() {
        loadNextItem(index + 1);
      }, 50);
    });
  }

  loadNextItem(0);
}

/* ===== ëª¨ë‹¬ ì—´ê¸° ===== */
function openModal(imageSrc, imageAlt) {
  var modal = container.querySelector('.bm-gallery__modal');
  var modalImage = container.querySelector('.bm-gallery__modal-img');

  if (!modal || !modalImage) return;

  savedScrollY = window.scrollY;

  modalImage.src = imageSrc;
  modalImage.alt = imageAlt || '';
  modal.classList.add('is-active');

  document.body.style.position = 'fixed';
  document.body.style.top = '-' + savedScrollY + 'px';
  document.body.style.width = '100%';
}

/* ===== ëª¨ë‹¬ ë‹«ê¸° ===== */
function closeModal() {
  var modal = container.querySelector('.bm-gallery__modal');
  var modalImage = container.querySelector('.bm-gallery__modal-img');

  if (!modal) return;

  modal.classList.remove('is-active');

  if (modalImage) {
    modalImage.src = '';
    modalImage.alt = '';
  }

  document.body.style.position = '';
  document.body.style.top = '';
  document.body.style.width = '';
  window.scrollTo(0, savedScrollY);
}

/* ===== ì´ë²¤íŠ¸ ìœ„ì„ ===== */
function handleClick(event) {
  event.preventDefault();

  var galleryItem = event.target.closest('.bm-gallery__item.has-image');
  if (galleryItem && !galleryItem.classList.contains('is-hidden')) {
    var img = galleryItem.querySelector('img');
    if (img && img.src && !img.hasAttribute('data-src')) {
      openModal(img.src, img.alt);
    }
    return;
  }

  var loadMoreBtn = event.target.closest('.bm-gallery__btn');
  if (loadMoreBtn) {
    loadMoreImages();
    return;
  }

  var modalClose = event.target.closest('.bm-gallery__modal-close');
  var modalBackdrop = event.target.closest('.bm-gallery__modal-backdrop');
  if (modalClose || modalBackdrop) {
    closeModal();
    return;
  }
}

/* ===== ESC í‚¤ ===== */
function handleKeydown(event) {
  if (event.key === 'Escape') {
    var modal = container.querySelector('.bm-gallery__modal');
    if (modal && modal.classList.contains('is-active')) {
      closeModal();
    }
  }
}

/* ===== ì´ˆê¸° ì‹¤í–‰ ===== */
prepareImages();
initGallery();

container.addEventListener('click', handleClick, true);
document.addEventListener('keydown', handleKeydown);

/* ===== ì»¨í…ìŠ¤íŠ¸ ë³€ê²½ ===== */
bm.onContextChange = function() {
  if (imageObserver) {
    imageObserver.disconnect();
  }
  prepareImages();
  initGallery();
};

/* ===== ì •ë¦¬ ===== */
bm.onDestroy = function() {
  container.removeEventListener('click', handleClick, true);
  document.removeEventListener('keydown', handleKeydown);

  if (imageObserver) {
    imageObserver.disconnect();
    imageObserver = null;
  }

  closeModal();

  currentDisplayCount = 0;
  totalImages = 0;
  savedScrollY = 0;
};
</script>

