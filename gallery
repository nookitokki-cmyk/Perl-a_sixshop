<script>
var container = bm.container;
var context = bm.context;

var GAP_SIZE = 16;

var state = {
  currentIndex: 0,
  realIndex: 0,
  isPlaying: false,
  autoPlayInterval: null,
  itemsPerView: 2,
  totalSlides: 0,
  isTransitioning: false,
  itemWidth: 0,
  isDragging: false,
  startX: 0,
  currentX: 0,
  dragOffset: 0,
  startTime: 0
};

var elements = null;
var imageObserver = null;
var resizeTimer = null;

/* ===== ìœ í‹¸ë¦¬í‹° ===== */

function isMobile() {
  return window.innerWidth <= 768;
}

function formatNumber(num) {
  return num < 10 ? '0' + num : '' + num;
}

function getMobileColumns() {
  return parseFloat(context.property.mobileColumns) || 1;
}

/* ===== ìš”ì†Œ ìºì‹± ===== */

function cacheElements() {
  elements = {
    galleryContainer: container.querySelector('.bm-pf__gallery-track'),
    galleryWrapper: container.querySelector('.bm-pf__gallery-wrap'),
    prevBtn: container.querySelector('.bm-pf__prev-btn'),
    nextBtn: container.querySelector('.bm-pf__next-btn'),
    playPauseBtn: container.querySelector('.bm-pf__play-pause-btn'),
    iconPause: container.querySelector('.bm-pf__icon-pause'),
    iconPlay: container.querySelector('.bm-pf__icon-play'),
    progressBarFill: container.querySelector('.bm-pf__progress-fill'),
    currentSlideEl: container.querySelector('.bm-pf__current'),
    totalSlidesEl: container.querySelector('.bm-pf__total')
  };
}

/* ===== ì•„ì´í…œ ë„ˆë¹„ ê³„ì‚° ===== */

function calculateItemWidth() {
  if (!elements || !elements.galleryWrapper) return 0;
  var wrapperWidth = elements.galleryWrapper.offsetWidth;
  var perView = state.itemsPerView;
  return wrapperWidth / perView;
}

function setItemWidths() {
  if (!elements || !elements.galleryContainer) return;
  var w = calculateItemWidth();
  var allItems = elements.galleryContainer.querySelectorAll('.bm-pf__item');
  for (var i = 0; i < allItems.length; i++) {
    allItems[i].style.width = w + 'px';
    allItems[i].style.minWidth = w + 'px';
  }
  state.itemWidth = w;

  /* ëª¨ë°”ì¼ 1ê°œ ê½‰ ì±„ì›€ì¼ ë•Œ ê°­ ì œê±° (JS ë³´ì¡°) */
  var isMobileFull = isMobile() && getMobileColumns() === 1;
  var innerEls = elements.galleryContainer.querySelectorAll('.bm-pf__item-inner');
  for (var j = 0; j < innerEls.length; j++) {
    innerEls[j].style.paddingRight = isMobileFull ? '0px' : '';
  }
}

/* ===== Lazy Loading ===== */

function setupLazyLoading() {
  if (imageObserver) {
    imageObserver.disconnect();
  }

  if (!('IntersectionObserver' in window)) return;

  imageObserver = new IntersectionObserver(function(entries) {
    entries.forEach(function(entry) {
      if (entry.isIntersecting) {
        var img = entry.target;
        var src = img.getAttribute('data-src');
        if (src && !img.src) {
          img.src = src;
          img.removeAttribute('data-src');
        }
        imageObserver.unobserve(img);
      }
    });
  }, {
    root: elements.galleryWrapper,
    rootMargin: '50px',
    threshold: 0.01
  });

  var images = container.querySelectorAll('.bm-pf__img-wrap img[data-src]');
  for (var i = 0; i < images.length; i++) {
    imageObserver.observe(images[i]);
  }
}

/* ===== í´ë¡  ìƒì„± (ë¬´í•œ ë£¨í”„) ===== */

function createClones() {
  if (!elements || !elements.galleryContainer) return;

  var originalItems = container.querySelectorAll('.bm-pf__item[data-original="true"]');
  if (!originalItems.length) return;

  /* ê¸°ì¡´ í´ë¡  ì œê±° */
  var existingClones = container.querySelectorAll('.bm-pf__item[data-clone="true"]');
  for (var c = existingClones.length - 1; c >= 0; c--) {
    existingClones[c].remove();
  }

  /* ì†Œìˆ˜ perViewë¥¼ ì˜¬ë¦¼í•˜ì—¬ í´ë¡  ìˆ˜ ê²°ì • */
  var cloneCount = Math.min(Math.ceil(state.itemsPerView), originalItems.length);

  /* ì•ìª½ í´ë¡  (ë’¤ì—ì„œ ê°€ì ¸ì˜´) */
  for (var i = originalItems.length - cloneCount; i < originalItems.length; i++) {
    var clone = originalItems[i].cloneNode(true);
    clone.setAttribute('data-clone', 'true');
    clone.removeAttribute('data-original');
    var img = clone.querySelector('img');
    if (img && img.src) {
      img.setAttribute('data-src', img.src);
      img.removeAttribute('src');
      img.removeAttribute('srcset');
    }
    elements.galleryContainer.insertBefore(clone, elements.galleryContainer.firstChild);
  }

  /* ë’¤ìª½ í´ë¡  (ì•ì—ì„œ ê°€ì ¸ì˜´) */
  for (var j = 0; j < cloneCount; j++) {
    var clone2 = originalItems[j].cloneNode(true);
    clone2.setAttribute('data-clone', 'true');
    clone2.removeAttribute('data-original');
    var img2 = clone2.querySelector('img');
    if (img2 && img2.src) {
      img2.setAttribute('data-src', img2.src);
      img2.removeAttribute('src');
      img2.removeAttribute('srcset');
    }
    elements.galleryContainer.appendChild(clone2);
  }

  setupLazyLoading();
}

/* ===== ìŠ¬ë¼ì´ë“œ ìœ„ì¹˜ ê³„ì‚° ===== */

function updateSlidePosition(noTransition, dragOff) {
  if (!elements || !elements.galleryContainer) return;

  var additional = dragOff || 0;

  if (noTransition) {
    elements.galleryContainer.classList.add('bm-pf--no-transition');
  } else {
    elements.galleryContainer.classList.remove('bm-pf--no-transition');
  }

  var offset = -state.currentIndex * state.itemWidth + additional;

  requestAnimationFrame(function() {
    if (elements && elements.galleryContainer) {
      elements.galleryContainer.style.transform = 'translateX(' + offset + 'px)';
    }
  });
}

function getCloneOffset() {
  return Math.min(Math.ceil(state.itemsPerView), state.totalSlides);
}

function calculateRealIndex() {
  var cloneOffset = getCloneOffset();
  var realIdx = state.currentIndex - cloneOffset;

  if (realIdx < 0) {
    realIdx = state.totalSlides + realIdx;
  } else if (realIdx >= state.totalSlides) {
    realIdx = realIdx % state.totalSlides;
  }
  return realIdx;
}

function updateUI() {
  if (!elements) return;

  state.realIndex = calculateRealIndex();

  if (elements.currentSlideEl) {
    elements.currentSlideEl.textContent = formatNumber(state.realIndex + 1);
  }

  if (elements.progressBarFill && state.totalSlides > 0) {
    var progress = ((state.realIndex + 1) / state.totalSlides) * 100;
    elements.progressBarFill.style.width = progress + '%';
  }
}

function handleInfiniteLoop() {
  var cloneOffset = getCloneOffset();

  if (state.currentIndex < cloneOffset) {
    state.currentIndex = cloneOffset + state.totalSlides + (state.currentIndex - cloneOffset);
    updateSlidePosition(true);
  } else if (state.currentIndex >= cloneOffset + state.totalSlides) {
    state.currentIndex = cloneOffset + (state.currentIndex - cloneOffset - state.totalSlides);
    updateSlidePosition(true);
  }
}

function updateSlide(noTransition) {
  updateSlidePosition(noTransition);
  updateUI();

  if (!noTransition) {
    setTimeout(function() {
      handleInfiniteLoop();
    }, 520);
  }
}

/* ===== ìŠ¬ë¼ì´ë“œ ë„¤ë¹„ê²Œì´ì…˜ ===== */

function prevSlide() {
  if (state.isTransitioning || state.isDragging) return;
  state.isTransitioning = true;
  state.currentIndex--;
  updateSlide();
  resetAutoPlay();
  setTimeout(function() { state.isTransitioning = false; }, 520);
}

function nextSlide() {
  if (state.isTransitioning || state.isDragging) return;
  state.isTransitioning = true;
  state.currentIndex++;
  updateSlide();
  resetAutoPlay();
  setTimeout(function() { state.isTransitioning = false; }, 520);
}

/* ===== ì¬ìƒ ì»¨íŠ¸ë¡¤ ===== */

function updatePlayPauseIcon() {
  if (!elements) return;
  if (elements.iconPause && elements.iconPlay) {
    if (state.isPlaying) {
      elements.iconPause.style.display = '';
      elements.iconPlay.style.display = 'none';
    } else {
      elements.iconPause.style.display = 'none';
      elements.iconPlay.style.display = '';
    }
  }
}

function togglePlayPause() {
  if (state.isPlaying) {
    pause();
  } else {
    play();
  }
}

function play() {
  state.isPlaying = true;
  updatePlayPauseIcon();
  startAutoPlay();
}

function pause() {
  state.isPlaying = false;
  updatePlayPauseIcon();
  stopAutoPlay();
}

function startAutoPlay() {
  stopAutoPlay();
  if (context.property.autoPlay && state.isPlaying && state.totalSlides > 0) {
    var interval = context.property.autoPlayInterval * 1000;
    state.autoPlayInterval = setInterval(function() {
      nextSlide();
    }, interval);
  }
}

function stopAutoPlay() {
  if (state.autoPlayInterval) {
    clearInterval(state.autoPlayInterval);
    state.autoPlayInterval = null;
  }
}

function resetAutoPlay() {
  if (state.isPlaying && context.property.autoPlay) {
    startAutoPlay();
  }
}

/* ===== ë“œë˜ê·¸ / ìŠ¤ì™€ì´í”„ ===== */

function onDragStart(x) {
  if (state.isTransitioning) return;
  state.isDragging = true;
  state.startX = x;
  state.currentX = x;
  state.dragOffset = 0;
  state.startTime = Date.now();
  if (elements && elements.galleryContainer) {
    elements.galleryContainer.classList.add('bm-pf--dragging');
  }
}

function onDragMove(x) {
  if (!state.isDragging) return;
  state.currentX = x;
  state.dragOffset = state.currentX - state.startX;
  updateSlidePosition(false, state.dragOffset);
}

function onDragEnd() {
  if (!state.isDragging) return;
  state.isDragging = false;

  if (elements && elements.galleryContainer) {
    elements.galleryContainer.classList.remove('bm-pf--dragging');
  }

  var distance = state.currentX - state.startX;
  var elapsed = Date.now() - state.startTime;
  var velocity = Math.abs(distance / elapsed);

  var threshold = state.itemWidth * 0.2;

  if (Math.abs(distance) > threshold || velocity > 0.3) {
    if (distance > 0) {
      prevSlide();
    } else {
      nextSlide();
    }
  } else {
    updateSlide();
  }
}

function handleTouchStart(e) {
  if (!context.property.enableSwipeGesture && isMobile()) return;
  var touch = e.touches[0];
  onDragStart(touch.clientX);
}

function handleTouchMove(e) {
  if (!state.isDragging) return;
  var touch = e.touches[0];
  onDragMove(touch.clientX);
}

function handleTouchEnd() {
  onDragEnd();
}

function handleMouseDown(e) {
  if (isMobile()) return;
  e.preventDefault();
  onDragStart(e.clientX);
}

function handleMouseMove(e) {
  if (!state.isDragging) return;
  e.preventDefault();
  onDragMove(e.clientX);
}

function handleMouseUp() {
  onDragEnd();
}

/* ===== ì´ë²¤íŠ¸ ë°”ì¸ë”© ===== */

function bindEvents() {
  container.addEventListener('click', function(e) {
    if (state.isDragging) {
      e.preventDefault();
      e.stopPropagation();
      return;
    }

    if (e.target.closest('.bm-pf__prev-btn')) {
      e.preventDefault();
      prevSlide();
    } else if (e.target.closest('.bm-pf__next-btn')) {
      e.preventDefault();
      nextSlide();
    } else if (e.target.closest('.bm-pf__play-pause-btn')) {
      e.preventDefault();
      togglePlayPause();
    }
  }, true);

  var wrapper = container.querySelector('.bm-pf__gallery-wrap');
  if (wrapper) {
    wrapper.addEventListener('touchstart', handleTouchStart, { passive: true });
    wrapper.addEventListener('touchmove', handleTouchMove, { passive: false });
    wrapper.addEventListener('touchend', handleTouchEnd, { passive: true });
    wrapper.addEventListener('mousedown', handleMouseDown);
    document.addEventListener('mousemove', handleMouseMove);
    document.addEventListener('mouseup', handleMouseUp);
  }

  window.addEventListener('resize', handleResize);
}

function handleResize() {
  clearTimeout(resizeTimer);
  resizeTimer = setTimeout(function() {
    var newPerView = isMobile() ? getMobileColumns() : context.property.desktopColumns;
    state.itemsPerView = newPerView;

    if (state.totalSlides === 0) return;

    createClones();
    setItemWidths();

    var cloneOffset = getCloneOffset();
    state.currentIndex = cloneOffset + state.realIndex;
    updateSlide(true);
  }, 150);
}

/* ===== ì´ˆê¸°í™” ===== */

function init() {
  cacheElements();

  var items = context.property.galleryItems || [];
  state.totalSlides = items.length;
  state.itemsPerView = isMobile() ? getMobileColumns() : context.property.desktopColumns;

  if (state.totalSlides === 0 || !elements || !elements.galleryContainer) return;

  createClones();
  setItemWidths();

  var cloneOffset = getCloneOffset();
  state.currentIndex = cloneOffset;

  updateSlide(true);

  if (elements.totalSlidesEl) {
    elements.totalSlidesEl.textContent = formatNumber(state.totalSlides);
  }

  if (context.property.autoPlay) {
    play();
  } else {
    pause();
  }
}

/* ===== ì‹¤í–‰ ===== */

init();
bindEvents();

bm.onContextChange = function() {
  stopAutoPlay();
  state.currentIndex = 0;
  state.realIndex = 0;
  state.isTransitioning = false;
  state.isDragging = false;

  setTimeout(function() {
    init();
  }, 50);
};

bm.onDestroy = function() {
  stopAutoPlay();
  clearTimeout(resizeTimer);

  if (imageObserver) {
    imageObserver.disconnect();
    imageObserver = null;
  }

  document.removeEventListener('mousemove', handleMouseMove);
  document.removeEventListener('mouseup', handleMouseUp);
  window.removeEventListener('resize', handleResize);

  elements = null;
};
</script>

